<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CockaIO.Views.MainDashboardView">

  <Grid Name="MasterGrid">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="40" MinWidth="180"/>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="75" MinWidth="300"/>
    </Grid.ColumnDefinitions>

    <Border Grid.Column="0"/>
    <GridSplitter Grid.Column="1" Width="3" ResizeDirection="Columns" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

    <Border Grid.Column="2"/>

    <Panel Grid.Column="0">
      <DataGrid Items="{Binding users}" AlternatingRowBackground="DarkBlue" IsReadOnly="True">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
          <DataGridTextColumn Header="Last Name" Binding="{Binding Lastname}"/>
        </DataGrid.Columns>
      </DataGrid>
    </Panel>
  </Grid>


</UserControl>
